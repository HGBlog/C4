// Work section begin
section.section.bg-variant.one#work
    .container
        // Section title
        h2.section-title Como Funciona

        // Slider with notes begin
        .note-slider

            .note-slider-control
                button.slider-prev
                    i.ion-android-arrow-back
                span Logando no Govern
                button.slider-next
                    i.ion-android-arrow-forward

            // Carousel with screenshots
            .carousel
                .slide(data-title="Logando no Govern")
                    .slide-inner
                        if prod
                            img(src="http://placehold.it/296x430", alt="app")
                        else
                            img(src="assets/images/Login-Govern-App-Slide.jpg", alt="slide 1")

                .slide(data-title="Escolha a Localização")
                    .slide-inner
                        if prod
                            img(src="http://placehold.it/296x430", alt="app")
